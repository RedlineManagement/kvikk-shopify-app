# .env fájl - NE commitáld git-be!

# Shopify App Credentials (Partner Dashboard-ból)
SHOPIFY_API_KEY=your_shopify_app_api_key
SHOPIFY_API_SECRET=your_shopify_app_secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# App URL-ek
HOST=https://your-app-domain.com
PORT=3000

# Kvikk API
KVIKK_API_KEY=your_kvikk_api_key
KVIKK_API_URL=https://api.kvikk.hu/v1

# Adatbázis (opcionális)
DATABASE_URL=postgresql://user:password@localhost:5432/kvikk_app

# Fejlesztési bolt
DEV_STORE_URL=https://your-dev-store.myshopify.com

# Logging
LOG_LEVEL=info

# Redis (session storage - opcionális)
REDIS_URL=redis://localhost:6379

# Email notifications (opcionális)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring (opcionális)
SENTRY_DSN=your_sentry_dsn